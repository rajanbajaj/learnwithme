doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/css/bootstrap.css')
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light.container-fluid
      a.navbar-brand(href='/') LearnWithMe
      button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.me-auto.mb-2.mb-lg-0
          li.nav-item
            a.nav-link.active(aria-current='page', href='/') Home
        form.d-flex
          input.form-control.me-2(type='search', placeholder='Search', aria-label='Search', name='keyword')
          button.btn.btn-outline-success(type='submit') Search
    
    block content
    
    script(src='/jquery.js')
    script(src='/tinymce.min.js')
    script(src='/javascripts/main.js')
    script(src='/js/bootstrap.js')